<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="120dp"
                                                   android:layout_height="150dp">

    <ImageView
            android:id="@+id/imageView"
            app:srcCompat="@android:color/holo_red_dark"

            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

    />
    <TextView
            android:id="@+id/lowerBound"
            android:text="0"
            android:textSize="12sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upperBound"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:textSize="12sp"/>
    <TextView
            android:text="km/hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unit" app:layout_constraintStart_toEndOf="@+id/lowerBound"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/lowerBound" android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>